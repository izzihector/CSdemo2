<odoo>
    <data>

        <record id="product_template_iso_inherit" model="ir.ui.view">
            <field name="name">product.template.iso</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='barcode']" position="after">
                        <field name="xaa_aa_watt_piek"/>
                        <field name="xaa_aa_iso"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="product_product_iso_inherit" model="ir.ui.view">
            <field name="name">product.product.iso</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='barcode']" position="after">
                        <field name="xaa_aa_watt_piek"/>
                        <field name="xaa_aa_iso"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="sale_order_iso_inherit" model="ir.ui.view">
            <field name="name">sale.order.iso.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="xaa_aa_watt_piek" invisible="1"/>
                    <field name="xaa_aa_iso" invisible="1"/>
                    <field name="xaa_aa_total_watt_piek" invisible="1"/>
                    <field name="xaa_aa_total_iso" invisible="1"/>
                </xpath>

                <xpath expr="/form/sheet/group" position="inside">
                    <group>
                        <field name="xaa_aa_order_watt_piek" options="{'currency_field': 'company_currency_id'}"/>
                        <field name="xaa_aa_order_iso" options="{'currency_field': 'company_currency_id'}"/>
                   </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
