<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customer_email_form" name="Customer Email Form ata">
        <div class="text-center">
            <div class="form-group row mt24">
                <div class="col-lg-5 col-md-5 col-sm-12 custom-text-right">
                    <label class="col-form-label">
                        E-mail address:
                    </label>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-12">
                    <input type="text" name="email_input" id="email"
                        class="form-control" required="1" autocomplete="new-password" style="text-transform: lowercase;"/>
                    <p id="email_show" class='text-danger text-left' style="display:none;">Er is geen geldig email adres ingegeven controleer of er een '@' en '.' is engevoerd</p>
                    <p id="hint"></p>
                </div>
            </div>
        </div>
        <div class="form-group row mt64">
            <div class="col-md-12 col-lg-12 col-sm-12 text-right">
                <button class="btn btn-primary btn-oppo-next mt16 search_customer"
                    data-id="customer_form_tab" type="Button">Next step
                </button>
            </div>
        </div>
    </template>
</odoo>