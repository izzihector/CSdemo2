<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customer_quote_formulier_cavity_thickness" name="Formulier Quote Cavity Thickness">
        <div class="div_padding_left">
            <div class="row form-group mt32">
                <div class="col-lg-12 col-md-12 col-sm-12 ">
                    <div class="form_lable mt16">
                        <label class="montserrat-extrabold_24">
                            What is the cavity thickness of your home?
                        </label>
                    </div>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-12 checkbox_div">
                    <div>
                        <div class="checkbox mb8 mt16">
                            <input type="radio" class="radio_design" name="xaa_aa_quote_cavity_thickness_home" t-att-checked="formulier_id.xaa_aa_quote_cavity_thickness_home == 'Minder dan 5 cm'" value="Minder dan 5 cm"/>
                            <label class="ng-binding col-form-label ml16" for="xaa_aa_quote_cavity_thickness_home">Minder dan 5 cm
                            </label>
                        </div>
                        <div class="checkbox mb8">
                            <input type="radio" class="radio_design" name="xaa_aa_quote_cavity_thickness_home" t-att-checked="formulier_id.xaa_aa_quote_cavity_thickness_home == '5 tot 6 cm'" value="5 tot 6 cm"/>
                            <label class="ng-binding col-form-label ml16" for="xaa_aa_quote_cavity_thickness_home">5 tot 6 cm
                            </label>
                        </div>
                        <div class="checkbox mb8">
                            <input type="radio" class="radio_design" name="xaa_aa_quote_cavity_thickness_home" t-att-checked="formulier_id.xaa_aa_quote_cavity_thickness_home == '6 tot 8 cm'" value="6 tot 8 cm"/>
                            <label class="ng-binding col-form-label ml16" for="xaa_aa_quote_cavity_thickness_home">6 tot 8 cm
                            </label>
                        </div>
                        <div class="checkbox mb8">
                            <input type="radio" class="radio_design" name="xaa_aa_quote_cavity_thickness_home" t-att-checked="formulier_id.xaa_aa_quote_cavity_thickness_home == 'Meer dan 8 cm'" value="Meer dan 8 cm"/>
                            <label class="ng-binding col-form-label ml16" for="xaa_aa_quote_cavity_thickness_home">Meer dan 8 cm
                            </label>
                        </div>
                        <div class="checkbox mb8">
                            <input type="radio" class="radio_design" name="xaa_aa_quote_cavity_thickness_home" t-att-checked="formulier_id.xaa_aa_quote_cavity_thickness_home == 'Ik weet het niet'" value="Ik weet het niet"/>
                            <label class="ng-binding col-form-label ml16" for="xaa_aa_quote_cavity_thickness_home">Ik weet het niet
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row mt64" id="next_privious">
                <div class="col-md-5 col-lg-4 col-sm-5 col-6">
                    <a class="btn-privoius mt16"
                        data-id="construction_year_tab"
                        type="Button" t-att-value="formulier_id.id">
                        <i class="fa fa-chevron-left" aria-hidden="false"/>Previous step
                    </a>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-5 col-6 quotation_tab_next">
                    <button class="btn btn-next mt16 mr16"
                        data-id="home_tab" type="Button"
                        t-att-value="formulier_id.id" style="left:-10px;">
                        Next step
                    </button>
                </div>
            </div>
        </div>
    </template>
</odoo>