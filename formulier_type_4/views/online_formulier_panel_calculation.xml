<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pv_panel_calculation_form">
        <div class="mt16 mb32">
            <div class="form-group row form-field">
                <div class="col-lg-4 col-md-4 col-sm-4 custom-text">
                    <label class="col-form-label" for="annual_consumption">What is the annual consumption:</label>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <input type="text" name="annual_consumption" class="form-control" t-att-value="formulier_id.annual_consumption"/>
                </div>
                <span>KWh</span>
            </div>
            <div class="form-group row form-field">
                <div class="col-lg-4 col-md-4 col-sm-4 custom-text">
                    <label class="col-form-label" for="total_yield_chosen_panels">Total yield for the chosen panels:</label>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <input type="text" name="total_yield_chosen_panels" class="form-control" t-att-value="formulier_id.total_yield_chosen_panels"/>
                </div>
                <span>KWh  = </span>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <input type="text" name="annual_consumption_percentage" class="form-control" 
                    t-att-value="formulier_id.annual_consumption_percentage"/>% of your annual consumption
                </div>
            </div>
            <div class="text-center col-lg-12 col-md-12" id="annual_consumption_warning" style="display:none;">
                <span style="color:red;">
                    <strong>Note: Your yield is too low for your annual consumption</strong>
                </span>
            </div>
        </div>

        <div class="text-center form-group" id="xaa_aa_roof_type_one" style="display:none;">
            <hr/>
            <div class="col-md-12 col-lg-12 col-sm-12 col-12">
                <a class="btn btn-primary btn-roof-details mt16 mr8"
                    data-id="roof_detail_page_1">
                    <i class="fa-arrow-alt-circle-down" aria-hidden="false"/>
                    DETAILS ROOF 1
