<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="project_formulier_image" name="Formulier Form Image">
    </template>
    <template id="project_formulier_extra_image" name="Formulier Form Extra Image">
        <div class="form-group row form-field mb4 mt24">
            <div class="col-lg-3 col-md-3 col-sm-3 custom-text">
                <label class="col-form-label" for="images">Images</label>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <label for="formulier_image_upload_input" class="custom-file-upload">
                    <input id="formulier_image_upload_input" name="formulier_image_upload_input" type="file" accept="image/*"/>
                </label>
            </div>
        </div>
        <div class="form-group row form-field">
            <div class="col-lg-3 col-md-3 col-sm-3">
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
                <div class="row" id="myDiv">
                    <t t-foreach="formulier_id.xaa_aa_image_ids" t-as="image">
                        <t t-if="not image.xaa_aa_is_task">
                            <div class="col-lg-3 col-md-3 col-sm-3 mb4 mt4">
                                <button type="button" class="close close_button pull-right" aria-label="close" t-attf-id="#{image.id}" t-attf-model="#{image._name}">×</button>
                                <img class="img img-fluid extra_image custom-image-size" t-attf-src="/web/image/order.image/{{image.id}}/xaa_aa_image" t-attf-id="#{image.id}" alt=""/>
                            </div>
                        </t>
                    </t>
                </div>
            </div>
        </div>
    </template>
    <template id="project_formulier_video" name="Formulier Form Image">
        <div class="form-group row form-field mb4 mt24">
            <div class="col-lg-3 col-md-3 col-sm-3 custom-text">
                <label class="col-form-label" for="video">Videos</label>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <label for="formulier_video_upload_input" class="custom-file-upload">
                    <input id="formulier_video_upload_input" name="formulier_video_upload_input" type="file" accept="video/*"/>
                </label>
            </div>
        </div>
        <div class="form-group row form-field">
            <div class="col-lg-3 col-md-3 col-sm-3">
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
                <div class="row" id="myVideo">
                    <t t-foreach="formulier_id.xaa_aa_video_ids" t-as="record">
                        <t t-if="not record.xaa_aa_is_task">
                            <div class="col-lg-4 col-md-4 col-sm-4 mb4 mt4 no-padding">
                                <button type="button" class="close close_button pull-right" aria-label="close" t-attf-id="#{record.id}" t-attf-model="#{record._name}">×</button>
                                <video class="col-lg-12 col-md-12 col-sm-12" 
                                t-attf-src="/web/video/{{record.id}}" controls="" t-attf-title="{{record.xaa_aa_name}}">
                                </video>
                            </div>
                        </t>
                    </t>
                </div>
            </div>
        </div>
    </template>
    <template id="project_formulier_document" name="Formulier Form Image">
        <div class="form-group row form-field mb4 mt24">
            <div class="col-lg-3 col-md-3 col-sm-3 custom-text">
                <label class="col-form-label" for="document">Documents</label>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <label for="formulier_document_upload_input" class="custom-file-upload">
                    <input id="formulier_document_upload_input" name="formulier_document_upload_input" type="file" accept="application/*"/>
                </label>
            </div>
        </div>
        <div class="form-group row form-field">
            <div class="col-lg-3 col-md-3 col-sm-3">
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
                <div class="row" id="myDocuments">
                    <t t-foreach="formulier_id.xaa_aa_document_ids" t-as="document">
                        <div class="col-lg-2 col-md-3 col-sm-3 mb4 mt4">
                            <button type="button" class="close close_button pull-right" aria-label="close" t-attf-id="#{document.id}" t-attf-model="#{document._name}">×</button>
                            <a t-attf-href="/web/content?model=order.document&amp;field=file&amp;id={{document.id}}&amp;filename={{document.xaa_aa_name}}&amp;download=true" class=" col-lg-12 col-md-12 col-sm-12" target="_blank">
                                <span class="fa fa-file" style="font-size:80px;"/>
                                <span t-esc="document.xaa_aa_name" style="word-wrap: break-word;"/>
                            </a>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </template>
