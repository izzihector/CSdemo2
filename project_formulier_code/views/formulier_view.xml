<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record model="ir.ui.view" id="project_formulier_code_form_view">
            <field name="name">question.formulier.code.form</field>
            <field name="model">question.formulier</field>
            <field name="inherit_id" ref="project_formulier.view_project_formulier_form" />
            <field name="arch" type="xml">
                <field name="xaa_aa_name" position="before">
                    <field name="xaa_aa_code" class="oe_inline" />
                    <label for="xaa_aa_code" string=" - " class="oe_inline" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="project_formulier_code_tree_view">
            <field name="name">question.formulier.code.tree</field>
            <field name="model">question.formulier</field>
            <field name="inherit_id" ref="project_formulier.view_project_formulier_tree" />
            <field name="arch" type="xml">
                <field name="xaa_aa_name" position="before">
                    <field name="xaa_aa_code" />
                </field>
            </field>
        </record>
</odoo>

