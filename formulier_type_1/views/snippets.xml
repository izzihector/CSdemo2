<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippets_inherit" inherit_id="project_formulier.snippets_inherit">
        <xpath expr="//div[hasclass('o_panel_header')]" position="inside">
            <script>
                formulier_type_one();
            </script>
        </xpath>
        <xpath expr="//div[@id='formulier_snippet_panel_body']" position="inside">
            <t t-snippet="formulier_type_1.four_image" t-thumbnail="/formulier_type_1/static/src/images/four_image.png"/>
            <t t-snippet="formulier_type_1.formulier_text_block" t-thumbnail="/formulier_type_1/static/src/images/text-block.png"/>
            <t t-snippet="formulier_type_1.least_four_image" t-thumbnail="/formulier_type_1/static/src/images/four_image.png"/>
            <t t-snippet="formulier_type_1.situation_snippet" t-thumbnail="/formulier_type_1/static/src/images/general_info.png"/>
            <t t-snippet="formulier_type_1.formulier_table" t-thumbnail="/formulier_type_1/static/src/images/general_info.png"/>
            <t t-snippet="formulier_type_1.quotation_template_pdf" t-thumbnail="/formulier_type_1/static/src/images/quotation_attachment.png"/>
            <t t-snippet="formulier_type_1.six_image" t-thumbnail="/formulier_type_1/static/src/images/six_imgs.png"/>
            <t t-snippet="formulier_type_1.level_measurement" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.svg"/>
            <t t-snippet="formulier_type_1.plattegrond_img_snippet" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.svg"/>
            <t t-snippet="formulier_type_1.fundering_img_snippet" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.svg"/>
            <t t-snippet="formulier_type_1.blueprint_img_snippet" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.svg"/>
            <t t-snippet="formulier_type_1.lot_img_snippet" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.svg"/>
            <t t-snippet="formulier_type_1.extra_drawing_1_img_snippet" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.svg"/>
            <t t-snippet="formulier_type_1.extra_drawing_2_img_snippet" t-thumbnail="/website/static/src/img/snippets_thumbs/s_picture.svg"/>
