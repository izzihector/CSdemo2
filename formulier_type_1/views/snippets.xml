    <template id="quotation_template_pdf" name="Quotation Attachment">
        <section class="s_three_columns">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 text-center">
                        <h4 class="text-center">Quotation Attachment Download</h4>
                        <a href="#" id="quotation_template_pdf" target="_blank">
                            <span class="fa fa-file" style="font-size:80px;"/>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </template>

